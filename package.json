{
  "name": "codescan-vscode",
  "displayName": "CodeScan",
  "description": "On-the-fly bug and quality issues detection for Apex and VisualForce",
  "version": "1.5.4",
  "icon": "images/codescan_128px.png",
  "publisher": "codescansf",
    "homepage": "http://www.code-scan.com",
  "repository": {
    "type": "git",
        "url": "https://github.com/VillageChief/sonarlint-vscode.git"
  },
  "bugs": {
        "url": "https://www.code-scan.com/",
        "email": "support@code-scan.com"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "salesforce",
    "code analysis",
    "linters"
  ],
  "activationEvents": [
	"*"
  ],
  "extensionDependency": [
    "typescript"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "CodeScan",
      "properties": {
        "codescan.testFilePattern": {
          "type": [
            "string",
            "null"
          ],
          "default": "{**/test/**,**/*test*,**/*Test*}",
          "description": "Files whose name match this glob pattern are considered as test files"
        },
        "codescan.analyzerProperties": {
          "type": [
            "object",
            "null"
          ],
          "patternProperties": {
            "^.*$": {
              "type": "string",
              "description": "One entry value"
            }
          },
          "default": null,
          "description": "Extra properties that will be passed to the analyzers. For example {\"sonar.javascript.globals\": \"xxx\"}. See documentation of each analyzers."
        },
        "codescan.disableTelemetry": {
          "type": "boolean",
          "default": false,
          "description": "Disable sending anonymous usage statistics"
        },
        "codescan.ls.javaHome": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path to the JRE (8 or more recent) used to launch the CodeScan Language Server.\nOn Windows, backslashes must be escaped, i.e.\n\"codescan.ls.javaHome\":\"C:\\\\Program Files\\\\Java\\\\jdk1.8.0_161\"",
          "scope": "window"
        },
        "codescan.ls.vmargs": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies extra VM arguments used to launch the CodeScan Language Server. For example \"-Xmx1024m\"",
          "scope": "window"
        },
        "codescan.servers": {
          "type": [
            "array",
            "null"
          ],
          "default": [],
          "description": "Configure the connection(s) to SonarQube/CodeScanCloud in your USER settings.\nFor security reasons, the token should not be stored in SCM with workspace settings\n\"codescan.servers\": [\n    {\n       \"serverId\": \"my_orga_in_codescan.io\", // Connection identifier\n       \"serverUrl\": \"https://app.codescan.io\",   // SonarQube/CodeScanCloud URL - https//app.codescan.io for CodeScanCloud\n       \"organizationKey\": \"my_organization\",   // Organization key in CodeScanCloud only\n       \"token\": \"V2VkIE1heSAyMyAwODowOTozMiBDRVNUIDIwMTgK\"    // User token - generated in SonarQube/CodeScanCloud in My Account>Security\n    }\n],",
          "items": {
            "properties": {
              "serverId": {
                "type": "string",
                "default": ""
              },
              "serverUrl": {
                "type": "string",
                "default": ""
              },
              "token": {
                "type": "string",
                "default": ""
              },
              "organizationKey": {
                "type": "string",
                "default": ""
              }
            },
            "additionalProperties": false,
            "required": [
                "serverId",
                "serverUrl"
            ]
          }
        },
        "codescan.project": {
          "type": [
            "object",
            "null"
          ],
          "default": {},
          "description": "Specify in WORKSPACE settings the SonarQube/CodeScanCloud project to which the current project is bound\n\"codescan.project\": {\n      \"serverId\": \"my_orga_in_codescan.io\",    // Connection defined in codescan.servers\n      \"projectKey\": \"my_project\"                 // Project key in SonarQube/CodeScanCloud\n  },",
          "properties": {
            "serverId": {
              "type": "string",
              "default": ""
            },
            "projectKey": {
              "type": "string",
              "default": ""
            }
          },
          "required": [
            "serverId",
            "projectKey"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "codescan/UpdateServersAndBinding",
        "title": "Update CodeScan binding to SonarQube/CodeScanCloud"
      }
    ]
  },
  "main": "./out/extension",
  "files": [
    "server/sonarlint-ls.jar"
  ],
  "scripts": {
    "vscode:prepublish": "./node_modules/.bin/tsc -p ./ && node scripts/prepare.js",
    "compile": "./node_modules/.bin/tsc -p ./",
    "watch": "./node_modules/.bin/tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "expand-home-dir": "0.0.3",
    "find-java-home": "0.2.0",
    "open": "6.0.0",
    "path-exists": "3.0.0",
    "vscode": "1.1.18",
    "vscode-languageclient": "4.4.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "crypto": "0.0.3",
    "dateformat": "^2.0.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-artifactory-upload": "^1.3.0",
    "gulp-bump": "^2.7.0",
    "gulp-cli": "^2.0.1",
    "gulp-download": "0.0.1",
    "gulp-rename": "1.2.2",
    "gulp-util": "3.0.8",
    "mocha": "^5.1.1",
    "sonarqube-scanner": "2.0.2",
    "through2": "^2.0.3",
    "typescript": "^2.6.2",
    "vsce": "^1.36.1"
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 100,
    "singleQuote": true
  }
}
